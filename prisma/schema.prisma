// Capable.ai — Prisma Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─────────────────────────────────────────────
// AUTH
// ─────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  sessions     Session[]
  projects     Project[]
  payments     Payment[]
  subscription Subscription?
  doAccount    DigitalOceanAccount?

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expiresAt  DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─────────────────────────────────────────────
// PROJECTS & PACKS
// ─────────────────────────────────────────────

enum ProjectMode {
  DRAFT_ONLY
  ASK_FIRST
}

model Project {
  id          String      @id @default(cuid())
  userId      String
  name        String
  description String      @db.Text
  templateId  String
  mode        ProjectMode @default(DRAFT_ONLY)
  neverRules  String[]
  botName     String?
  userName    String?
  userRole    String?
  personality String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  packVersions PackVersion[]
  deployment   Deployment?
  payments     Payment[]

  @@index([userId])
  @@map("projects")
}

model PackVersion {
  id          String   @id @default(cuid())
  projectId   String
  version     Int
  files       Json     // { "SOUL.md": "...", "AGENTS.md": "...", ... }
  configPatch Json     // memory boost flags
  changelog   String?  @db.Text
  zipUrl      String?
  zipSha256   String?
  createdAt   DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, version])
  @@index([projectId])
  @@map("pack_versions")
}

// ─────────────────────────────────────────────
// DEPLOYMENTS
// ─────────────────────────────────────────────

enum DeploymentStatus {
  PENDING
  PROVISIONING
  ACTIVE
  UNHEALTHY
  DEACTIVATED
}

model Deployment {
  id                 String           @id @default(cuid())
  projectId          String           @unique
  status             DeploymentStatus @default(PENDING)
  dropletIp          String?
  activePackVer      Int?
  projectToken       String           @unique @default(cuid())
  subdomain          String?          @unique
  cloudflareRecordId String?
  dropletId          String?          // DigitalOcean droplet ID
  region             String?          // e.g. "nyc1"
  size               String?          // e.g. "s-1vcpu-1gb"
  deployMethod       String?          // "auto" | "manual"
  lastHeartbeatAt    DateTime?
  heartbeatData      Json?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("deployments")
}

// ─────────────────────────────────────────────
// DIGITALOCEAN
// ─────────────────────────────────────────────

model DigitalOceanAccount {
  id             String   @id @default(cuid())
  userId         String   @unique
  accessToken    String   // encrypted with AES-256-GCM
  refreshToken   String   // encrypted with AES-256-GCM
  tokenExpiresAt DateTime
  doAccountEmail String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("digitalocean_accounts")
}

// ─────────────────────────────────────────────
// SUBSCRIPTIONS
// ─────────────────────────────────────────────

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
  UNPAID
}

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  stripeCustomerId     String             @unique
  stripeSubscriptionId String             @unique
  status               SubscriptionStatus @default(TRIALING)
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  trialEnd             DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  canceledAt           DateTime?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

// ─────────────────────────────────────────────
// PAYMENTS (legacy — kept for historical records)
// ─────────────────────────────────────────────

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Payment {
  id                      String        @id @default(cuid())
  userId                  String
  projectId               String
  stripeCheckoutSessionId String        @unique
  stripePaymentIntentId   String?       @unique
  stripeCustomerId        String?
  amountCents             Int
  currency                String        @default("usd")
  status                  PaymentStatus @default(PENDING)
  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([projectId])
  @@map("payments")
}
